<%= provide(:title, "Anime Vietsub Update") %>
<div class="row">
  <div class="col-md-12">
    <% @posts.each do |post| %>
      <h3><%= link_to post.title, post.link %></h3>
      <% if post.image %>
      <img src="<%= post.image %>" width="600" height="300"></img>
      <% end %>
      <p>
        Public: <%= post.public %>
      </p>
    <% end %>
  </div>
</div>
