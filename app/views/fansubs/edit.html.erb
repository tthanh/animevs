<%= provide(:title, "Edit Fansub Information") %>
<div class="row">
  <div class="col-md-6">
    <h1>Fansub Information</h1>
    <%= form_for @fansub do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :homepage %>
        <%= f.text_field :homepage, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
      <div class="form-group">
        <%= render 'shared/error_messages', object: f.object %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h1>Fansub Tag</h1>
    <% if @fansub.tag.nil? %>
      <%= form_for @tag, url: fansub_tags_path(@fansub) do |f| %>
        <%= render 'tags/fields', f: f %>
        <div class="form-group">
          <%= f.submit "Create Tag", class: 'btn btn-primary' %>
        </div>
        <div class="form-group">
          <%= render 'shared/error_messages', object: f.object %>
        </div>
      <% end %>
    <% else %>
      <%= form_for @tag, url: fansub_tag_path(@fansub, @tag) do |f| %>
        <%= render 'tags/fields', f: f %>
        <div class="form-group">
          <%= f.submit "Update Tag", class: 'btn btn-primary' %>
        </div>
        <div class="form-group">
          <%= render 'shared/error_messages', object: f.object %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
